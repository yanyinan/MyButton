<?xml version="1.0" encoding="utf-8"?>
 <!-- 命名空间结尾是自定义控件的包名 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   
    			xmlns:yinan="http://schemas.android.com/apk/res/com.example.togglebtn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   <com.example.togglebtn.MyToggleButton
        android:id="@+id/my_toggle_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        yinan:back_img="@drawable/switch_background"
        yinan:button_img="@drawable/slide_button"
        yinan:state="false"
        /> 

</RelativeLayout>
